//- Ingat untuk dynamic pada attribute pug itu pake attr=(nama_var)
//- Mirip React: attr={nama_var}
//- Jika ada di file .pug -> #{} akan dianggap dynamic
//- Bahkan pada: scipt const test = "#{test}" (#{} tetap akan bekerja)
//- Untuk escape #{} adalah dengan \#{}

extends ../layouts/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/product.css")

block content
  main 
    if products.length > 0
      .grid
        each product in products
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}

            .card__image
              img(src=(product.imageUrl), alt=(product.title))

            .card__content
              h2.product__price $#{product.price}
              p.product__description #{product.description}
            
            .card__actions
              include ../includes/add-to-cart.pug
    else 
      h1 No products available